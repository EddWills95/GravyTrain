<%= form_for(@provider, url: registration_path(:buyer)) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :email, autofocus: true %>
  <%= f.hidden_field :password, autocomplete: "off" %>
  <%= f.hidden_field :type %>
  <%= f.hidden_field :password_confirmation, autocomplete: "off" %>
  <div>
    <%= f.label :organisation_name %>
    <%= f.text_field :organisation_name %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
   
  </div>

<% end %>

<%= render "devise/shared/links" %>